---
import { execSync } from 'node:child_process';
const commitHash = execSync('git rev-parse --short HEAD').toString().trim();
---

<footer>
    <div>
        <a href={`https://github.com/maker-lukas/lukasreis.com-v2.1/commit/${commitHash}`}>
            <img src="/git-commit.svg" alt="commit" />
            {commitHash}
        </a>
    </div>
    <p>Made by Lukas with &lt;3</p>
    <div>
        <a href="https://github.com/maker-lukas">GitHub</a>
    </div>
</footer>

<style>
    footer {
        font-size: 15px;
        margin-top: 10px;
        margin-bottom: 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    footer a:first-child {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        flex: 1;
    }

    footer p {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    footer a:last-child {
        flex: 1;
        text-align: right;
    }

    footer a:first-child img {
        height: 1em;
        vertical-align: middle;
    }
</style>

