---
let commitHash = 'unknown';
try {
    const res = await fetch('https://api.github.com/repos/maker-lukas/lukasreis.com-v2.1/commits?per_page=1');
    const data = await res.json();
    if (data[0]?.sha) commitHash = data[0].sha.slice(0, 7);
} catch {}
---

<footer>
    <a href={`https://github.com/maker-lukas/lukasreis.com-v2.1/commit/${commitHash}`}>
        <img src="/git-commit.svg" alt="commit" />
        {commitHash}
    </a>
    <p>Made by Lukas with &lt;3</p>
    <a href="https://github.com/maker-lukas">GitHub</a>
</footer>

<style>
    footer {
        font-size: 15px;
        margin-top: 10px;
        margin-bottom: 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    footer a:first-child {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    footer a:first-child img {
        height: 1em;
        vertical-align: middle;
    }
</style>
