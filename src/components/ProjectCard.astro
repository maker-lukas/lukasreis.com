---
interface Props {
  title: string;
  description: string;
  image: string;
  github: string;
}
const { title, description, image, github } = Astro.props;
---

<a href={github} target="_blank" class="project">
  <div class="image-wrapper">
    <img src={image} alt={title} />
  </div>
  <div class="content">
    <h4>{title}</h4>
    <p>{description}</p>
  </div>
</a>

<style>
  .project {
    flex: 1;
    background: #452F5E;
    border-radius: 10px;
    min-height: 350px;
    border: 3px solid #7550A1;
    cursor: pointer;
    transition: border-color 0.2s ease;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .project:hover {
    border-color: #A084C2;
  }

  .image-wrapper {
    padding: 1ch;
    padding-bottom: 0;
  }

  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    display: block;
  }

  .content {
    padding: 1ch;
  }

  h4 {
    margin: 0 0 0.5ch;
  }

  p {
    margin: 0;
    opacity: 0.8;
    font-size: 14px;
  }
</style>
