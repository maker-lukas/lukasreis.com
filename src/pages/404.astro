---
import Layout from "../layouts/Layout.astro";


---

<Layout title="lukas/404">
  <div class="page">
    <h1>404</h1>
    <p>Page not found</p>
    <a class="back" href="/">‚Üê Back home</a>
  </div>
</Layout>

<style>
  .page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 50vh;
    gap: 1ch;
  }

  h1 {
    font-size: 4rem;
    color: var(--yellow);
    margin: 0;
  }

  p {
    font-size: 1.25rem;
    opacity: 0.8;
  }

  .back {
    margin-top: 2ch;
    padding: 0.5ch 1.5ch;
    background: var(--dark-purple);
    border: 3px solid var(--purple);
    border-radius: 8px;
    transition: border-color 0.2s ease;
  }

  .back:hover {
    border-color: var(--light-purple);
    text-decoration: none;
  }
</style>